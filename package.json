{
  "name": "nodepress",
  "version": "3.2.6",
  "description": "RESTful API service for Surmon.me blog",
  "author": {
    "name": "Surmon",
    "email": "surmon@foxmail.com",
    "url": "https://github.com/surmon-china"
  },
  "private": false,
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/surmon-china/nodepress/issues"
  },
  "homepage": "https://github.com/surmon-china/nodepress#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/surmon-china/nodepress.git"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "NODE_ENV=development nodemon --config nodemon-debug.json",
    "start:prod": "NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "prestart:prod": "NODE_ENV=production rimraf dist && tsc",
    "build": "NODE_ENV=production tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "updategeodb": "node ./node_modules/geoip-lite/scripts/updatedb.js"
  },
  "dependencies": {
    "@nestjs/common": "^6.5.3",
    "@nestjs/core": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/typeorm": "^6.1.3",
    "akismet-api": "^4.2.0",
    "ali-oss": "^6.1.1",
    "body-parser": "^1.19.0",
    "cache-manager": "^2.10.0",
    "cache-manager-redis-store": "^1.5.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "csurf": "^1.10.0",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "geoip-lite": "^1.3.7",
    "googleapis": "^41.0.1",
    "helmet": "^3.19.0",
    "hiredis": "^0.5.0",
    "js-base64": "^2.5.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "marked": "0.6.3",
    "mongoose": "^5.7.5",
    "mongoose-auto-increment": "^5.0.1",
    "mongoose-paginate": "https://github.com/surmon-china/mongoose-paginate",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.4.16",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.5.2",
    "shelljs": "^0.8.3",
    "simple-netease-cloud-music": "^0.4.4",
    "sitemap": "^3.2.2",
    "typegoose": "^5.8.1",
    "typeorm": "^0.2.18",
    "typescript": "^3.5.3",
    "wonderful-bing-wallpaper": "^0.2.1",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.5.3",
    "@types/ali-oss": "^6.0.4",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/marked": "0.6.5",
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.38",
    "@types/mongoose-paginate": "^5.0.6",
    "@types/node": "^12.6.8",
    "@types/node-schedule": "^1.2.3",
    "@types/redis": "^2.8.13",
    "@types/supertest": "^2.0.8",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.18.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
